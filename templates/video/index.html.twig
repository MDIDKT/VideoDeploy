{% extends 'base.html.twig' %}

{% block title %}Hello VideoController!{% endblock %}

{% block body %}
    {{ form(form) }}

    <h1>Video</h1>
    <div class="row row-cols-1 row-cols-md-2 g-4"
    {% for video in videos%}
        <div class="col">
            <div class="card">
                <img src="{{ video.url }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ video.name }}</h5>
                    <p class="card-text">{{ video.url }}</p>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}
